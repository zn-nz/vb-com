{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"strict": true,
		"jsx": "preserve",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"lib": ["ESNext", "DOM"],
		"skipLibCheck": true,
		"noEmit": true,
		"types": ["node"],
		"composite": true,
		"allowSyntheticDefaultImports": true,
		"rootDir": "."
	},
	"include": ["packages/**/*", "vite.config.ts"],
	"exclude": ["**/node_modules"]
}
