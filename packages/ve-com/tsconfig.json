{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"strict": true,
		"jsx": "preserve",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"lib": ["ESNext", "DOM"],
		"skipLibCheck": true,
		"noEmit": true,
		"paths": {
			"@ve-com/*": ["../../"]
		},
		"types": ["node"],
		"composite": true,
		"allowSyntheticDefaultImports": true,
		"rootDir": "../../packages/"
	},
	"include": ["../**/*"],
	"exclude": ["**/node_modules"]
}
